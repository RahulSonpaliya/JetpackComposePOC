<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposePOC"
        tools:targetApi="31">
        <activity
            android:name=".tutorial3.Tutorial3Activity"
            android:exported="true"
            android:label="@string/title_activity_tutorial3"
            android:theme="@style/Theme.JetpackComposePOC">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".compose_inside_xml.ComposeInsideXmlActivity"
            android:exported="true"
            android:theme="@style/MyCustomTheme"/>
        <activity
            android:name=".project_setup.ProjectSetupActivity"
            android:exported="true"
            android:label="@string/title_activity_project_setup"
            android:theme="@style/Theme.JetpackComposePOC" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackComposePOC" />
    </application>

</manifest>